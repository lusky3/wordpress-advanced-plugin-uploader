{
    "name": "bulk-plugin-installer/bulk-plugin-installer",
    "description": "WordPress plugin for bulk uploading and installing multiple plugin ZIP files in a single operation.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "giorgiosironi/eris": "^1.0",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BPI\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite unit",
        "test:property": "phpunit --testsuite property"
    }
}
